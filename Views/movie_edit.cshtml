@{Layout = "Views/Shared/_Layout.cshtml";}
<h1>Cinema Scene</h1>
<hr />
<h2>Edit movie: @Model.GetTitle()</h2>
<form action="/movie/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="movie-id" type="hidden" value="@Model.GetId()">
  <label for="movie-title">Movie title</label>
  <input id="movie-title" name="movie-title" type="text">
  <label for="movie-rating">Rating</label>
  <input id="movie-rating" name="movie-rating" type="text">
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
