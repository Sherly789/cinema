@{Layout = "Views/Shared/_Layout.cshtml";}
<h1>Cinema Scene</h1>
<hr />
<h2>Movies:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var movie in Model)
    {
      <li><a href='/movie_to_theater/@movie.GetId()'>@movie.GetTitle()</a> | <a href="/movie/edit/@movie.GetId()">Edit</a>| <a href="movie/delete/@movie.GetId()">Delete</li>
    }
  </ul>
  <form action="/movies/delete" method="post">
    <button type="submit">Clear all movies</button>
  </form>
}
<h4><a href="/movies/new">Add new movie</a></h4>
<h4><a href="/">Return home</a></h4>
