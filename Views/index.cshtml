@{Layout = "Views/Shared/_Layout.cshtml";}
<h1>Welcome to the Cinema Scene Home Page!</h1>

<h2>Movies:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var movie in Model)
    {
      <li><strong><a href='/movies/@movie.GetId()'>@movie.GetTitle()</a></strong></li>
    }
  </ul>
}

<a href="/theaters" class="btn btn-default">View Theaters</a>
<a href="/customers/new" class="btn btn-default">Place a movie ticket order here</a>
<h6><a href="/admin" class="btn btn-xs btn-primary">admin</a></h6>
