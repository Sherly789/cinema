
@{Layout = "Views/Shared/_Layout.cshtml";}
<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="/Contents/js/scripts.js"></script>






<form class="form-horizontal" action="/customer/placeOrder" method="post">
  <input type="hidden" name="user-order-id" value="@Model["user"].GetId()">
  <input type="hidden" name="movie-order-id" value="@Model["selectedMovie"].GetId()">
  <input type="hidden" name="theater-order-id" value="@Model["selectTheater"].GetId()">
  <h3>Enter Quantity:</h3>
  <input id="order-qt-input" type="text" name="order-qt" value="1">
  <h2>Your order will cost $<span id="total-price">10</span></h2>
  <h4>Your Name: @Model["user"].GetName()</h4>
  <h4>Movie Title: @Model["selectedMovie"].GetTitle()</h4>
  <h4> Theater: @Model["selectTheater"].GetLocation()</h4>

  <h3>Please enter your credit card information below:</h3>
  <fieldset>
    <legend>Credit Card Form</legend>
    <div class="form-group">
      <label for="inputName" class="col-lg-2 control-label">Full Name</label>
      <div class="col-lg-10">
        <input type="name" class="form-control" id="inputName" placeholder="Name" required>
      </div>
    </div>

    <div class="form-group">
      <label for="inputAddress" class="col-lg-2 control-label">Address</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputAddress" placeholder="Address" required>
      </div>
    </div>

    <div class="form-group">
      <label for="inputCreditCard" class="col-lg-2 control-label">Credit Card Number</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputCreditCard" placeholder="Credit Card Number">
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">Do you want to sign up for our email newsletter?</label>
      <div class="col-lg-10">
        <div class="radio">
          <label>
            <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
            Yes
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
            Absolutely!
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputEmail" placeholder="Email" required>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-default">Cancel</button>
      </div>
    </div>
  </fieldset>
