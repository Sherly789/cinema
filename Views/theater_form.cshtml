<h1>Cinema Scene</h1>
<hr />
<h2>Theater Specs:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var theater in Model)
    {
      <li><a href='/theater-add/@theater.GetId()'>Add movie to @theater.GetLocation()</a>| <a href="/theater/edit/@theater.GetId()">Edit</a>| <a href="/theater/delete/@theater.GetId()">Delete</a></li>
    }
  </ul>
}

<hr>

<h2>Add new theater</h2>
<form action="/theaters/new" method="post">
  <label for="theater-location">Theater name:</label>
  <input id="theater-location" name="theater-location" type="text">
  <label for="theater-date">Enter Showtime</label>
  <input id="theater-date" name="theater-date" type="datetime-local">
    <button type="submit">Add</button>
</form>



