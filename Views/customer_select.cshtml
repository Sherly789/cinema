@{Layout = "Views/Shared/_Layout.cshtml";}
<h1>Cinema Scene</h1>
<hr />
<h2>Select a movie to purchase:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var movie in Model["allmovie"])
    {
      <li><strong>Title:</strong> <a href='/customer/select/user/@Model["users"].GetId()/@movie.GetId()'>@movie.GetTitle()</a>, <strong>Rating:</strong>@movie.GetRating()</li>
    }
  </ul>
}

<a href="/" class="btn btn-default">Return home</a>
